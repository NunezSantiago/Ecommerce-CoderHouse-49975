<h1>{{title}}</h1>
{{#each cart.products}}

    <div>
        <h3>{{this.product.title}}</h3>
        <p>Quantity: {{this.quantity}}</p>
        <hr>
    </div>

{{/each}}

{{#if emptyCart}}
    <p>Your cart is empty.</p>
{{else}}
    <form action="/api/carts/{{currentUser.cartID}}/purchase" method="post">
        <input type="submit" value="Finalize purchase">
    </form>
{{/if}}

